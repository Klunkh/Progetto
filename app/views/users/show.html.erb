<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-6">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
	User Name:
        <%= @user.name  %>
	<br>
	E-mail:
	<%= @user.email %>
	
	
      </h1>
    </section>
  </aside>
<div class="col-md-8">
    <% if @user.reviews.any? %>
      <h3>Reviews (<%= @user.reviews.count %>)</h3>
      <ol class="microposts">
        <%= render @reviews %>
      </ol>
      <%= will_paginate @reviews %>
    <% end %>
  </div>

</div>


